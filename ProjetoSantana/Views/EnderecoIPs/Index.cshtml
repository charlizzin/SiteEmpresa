@model IEnumerable<ProjetoSantana.Models.EnderecoIP>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de IPs</h2>


<table class="table">
    <tr>
        <th class="text-center" width="100">
            @Html.DisplayNameFor(model => model.Ip)
        </th>
        <th class="text-center" width="100">
            @Html.DisplayNameFor(model => model.Setor)
        </th>
        <th class="text-center" width="100">
            @Html.DisplayNameFor(model => model.Empresa)
        </th>
        <th class="text-center" width="100">
            @Html.DisplayNameFor(model => model.Usuario)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="vertical-align:middle" align="center">
            @Html.DisplayFor(modelItem => item.Ip)
        </td>
        <td style="vertical-align:middle" align="center">
            @Html.DisplayFor(modelItem => item.Setor)
        </td>
        <td style="vertical-align:middle" align="center">
            @Html.DisplayFor(modelItem => item.Empresa)
        </td>
        <td style="vertical-align:middle" align="center">
            @Html.DisplayFor(modelItem => item.Usuario)
        </td>
        <td style="vertical-align:middle" align="center">
            @Html.DisplayFor(modelItem => item.Observacao)
        </td>
        <td style="vertical-align:middle" align="center">
            <button type="button" class="btn btn btn-primary btn-xs" onclick="location.href='@Url.Action("Edit","EnderecoIPs", new { id = item.Codigo })'"><span class="glyphicon glyphicon-pencil"></span></button>
            <button type="button" class="btn btn-primary btn-xs" onclick="location.href='@Url.Action("Details","EnderecoIPs", new { id = item.Codigo })'"><span class="glyphicon glyphicon-eye-open"></span></button>
        </td>
    </tr>
}
</table>
